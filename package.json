{
  "name": "standard-site-template",
  "version": "2.0.0",
  "description": "Template for start project based on non framework, or single page application.",
  "homepage": "https://github.com/galiprandi/standard-site-template",
  "repository": {
    "type": "git",
    "url": "git@github.com:galiprandi/standard-site-template.git"
  },
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "start": "npx servor ./www --browse --reload",
    "ts-watch": "tsc --watch",
    "js-minify": "npx uglifyjs-folder ./www/site/js -eo ./www/site/js -p \"**/*.js,!**/*min.js,!**/*test.js,!libraries/*\""
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coverageProvider": "v8"
  },
  "keywords": [],
  "author": "Germ√°n Aliprandi",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^26.6.3",
    "standard": "^16.0.3"
  }
}
